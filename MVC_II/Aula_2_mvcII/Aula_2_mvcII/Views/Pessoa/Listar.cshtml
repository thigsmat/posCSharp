@model IEnumerable<Aula_2_mvcII.Models.PessoaModel>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    <a href="@Url.Action("Cadastro")" class="btn btn-primary"> 
		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>				
	</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a href="@Url.Action("Cadastro")/@item.Id" class="btn btn-info"> 
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>				
			</a>
            <a href="" onClick="excluir(this, event, @item.Id);" class="btn btn-danger"> 
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>				
			</a>
        </td>
    </tr>
}

</table>
